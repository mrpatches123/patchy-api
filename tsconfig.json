{
   "compilerOptions": {
      "target": "es2021",
      "moduleResolution": "node",
      "module": "ES2020",
      "declaration": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "pretty": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "allowUnreachableCode": true,
      "allowUnusedLabels": true,
      "noImplicitAny": true,
      "noImplicitReturns": false,
      "noImplicitUseStrict": false,
      "outDir": "scripts/",
      "rootDir": "src/",
      "baseUrl": "src/",
      "listFiles": false,
      "noEmitHelpers": true,
      "allowJs": true,
      "noUncheckedIndexedAccess": true,
      "noEmit": false
   },
   "include": [
      "src/**/*"
   ],
   "compileOnSave": true
}